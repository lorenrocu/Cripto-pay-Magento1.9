-->
<criptopay_standard_failure>
    <reference name="root">
        <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
    </reference>
    <reference name="content">
        <block type="criptopay/standard_failure" name="criptopay_standard_failure" template="criptopay/standard/failure.phtml">
